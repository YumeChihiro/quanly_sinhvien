<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".diem.Them_Diem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="THÊM/SỬA ĐIỂM"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/linearKhoa"
        android:layout_width="345dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="#00FF00"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="Khoa"
                android:textColor="#424242"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerKhoa"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/chonKhoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="18dp"
            android:text="Chọn khoa"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLop"
        android:layout_width="345dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="#00FF00"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/btn_backLop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/textV"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="Lơp"
                android:textColor="#424242"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerLop"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/chonLop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="18dp"
            android:text="Chọn lớp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearSinhVien"
        android:layout_width="345dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="#00FF00"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/btn_backSinhVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/t"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="Sinh viên"
                android:textColor="#424242"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerSinhVien"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/chonSinhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="18dp"
            android:text="Chọn sinh viên"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearHocKi"
        android:layout_width="345dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="#00FF00"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/btn_backHocKi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/text"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="Học kì"
                android:textColor="#424242"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerHocKi"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/chonHocKi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="18dp"
            android:text="Chọn học kì"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gradient_background"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/btn_backMon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Môn"
                android:textColor="#424242"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerMon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/chonMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            android:text="Chọn Môn"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Form Fields -->
        <LinearLayout
            android:id="@+id/nhapDiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <!-- MSSV Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/field2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="15p:"
                    android:textColor="#424242"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/diem15p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Ten Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/field3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Giữa kì:"
                    android:textColor="#424242"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/giuaki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Dia chi Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/field4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Cuối kì:"
                    android:textColor="#424242"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/cuoiki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/field5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Trung bình:"
                    android:textColor="#424242"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/trungbinh"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/done"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    android:gravity="center"
                    android:text="✓"
                    android:textColor="#4CAF50"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>